<style>
    body {
        /* background: linear-gradient(to bottom right, #979797, #343a40); */
        background-color: #0093E9;
        background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
    }
    


    .background_decor {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
        margin-top: 100px;
    }
</style>
<div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4 bg-white rounded p-4 shadow">
        <h3 class="text-center mb-4">Provider Login</h3>
        <ul class="nav nav-tabs justify-content-center mb-3">
          <li class="nav-item">
            <a href="#" class="nav-link active">Login</a>
          </li>
          <li class="nav-item">
            <a href="/provider/signup" class="nav-link">Sign Up</a>
          </li>
        </ul>
        <form class="row g-3" action="/provider/login" method="POST">
          <div class="col-12">
            <div class="form-floating">
              <input type="text" class="form-control" name="email" required id="floatingInput"
                     value="<%= (typeof form != 'undefined') ? form.email : '' %>">
              <label for="floatingInput">Email address</label>
            </div>
          </div>
          <div class="col-12">
            <div class="form-floating">
              <input type="password" class="form-control" name="password" required id="floatingPassword"
                     value="<%= (typeof form != 'undefined') ? form.password : '' %>">
              <label for="floatingPassword">Password</label>
            </div>
          </div>
          <% if (errors.length > 0) { %>
          <div class="col-12">
            <div class="alert alert-danger">
              <ul>
                <% for (e of errors) { %>
                <li><%= e %></li>
                <% } %>
              </ul>
            </div>
          </div>
          <% } %>
          <div class="col-6">
            <div class="form-check">
              <input id="rememberme" name="_spring_security_remember_me" class="form-check-input" type="checkbox" value="true" checked>
              <input type="hidden" name="__spring_security_remember_me" value="on">
              <label class="form-check-label" for="rememberme">
                Remember Me
              </label>
            </div>
          </div>
          <div class="col-6 text-end">
            <a class="forget-password-link" href="#">Forgot Password?</a>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Sign In</button>
          </div>
        </form>
        <div class="mt-3 text-center">
          <p>Donâ€™t have an account? <a class="text-primary fw-bold" href="/provider/signup">Sign Up Now!</a></p>
        </div>
      </div>
    </div>
  </div>
  